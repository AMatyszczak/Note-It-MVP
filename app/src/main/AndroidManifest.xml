<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adria.myappmvp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".remote.LoginActivity"
            android:label="login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".taskAdd.TaskAddActivity"
            android:label="@string/title_activity_add_task"
            android:parentActivityName=".task.TaskActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".taskDetail.TaskDetailActivity"
            android:label="@string/title_activity_task_detail"
            android:parentActivityName=".task.TaskActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".task.TaskActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".remote.RegisterActivity"
            android:label="register" />
        <activity android:name=".widget.TaskWidgetActivity"
            android:label="WidgetActivity"
            android:windowSoftInputMode="adjustResize"/>

        <receiver android:name=".widget.TaskWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/task_widget_info" />
        </receiver>

    </application>

</manifest>